{
  "name": "@rt/server",
  "version": "1.0.0",
  "description": "Server app for managing reviews of different places using Node, Typescript, Express, PostrgreSQL",
  "main": "dist/src/index.js",
  "author": "Dominik Stefancik",
  "keywords": [
    "Node.js",
    "Typescript",
    "Express",
    "PostgreSQL"
  ],
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && yarn run dev",
    "dev": "MODULE_NAME=$npm_package_name PORT=3000 ts-node-dev --respawn --transpile-only src/index.ts | pino-pretty",
    "build": "yarn run lint && yarn run compile",
    "rebuild": "yarn run clean && yarn run build",
    "lint": "eslint . --ext .ts",
    "clean": "[ -d dist ] && rm -f -r dist",
    "compile": "tsc -p .",
    "compile:watch": "tsc -w",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint",
    "prettify": "prettier --write \"./src/**/*.{js,ts,json}\""
  },
  "dependencies": {
    "express": "^4.18.1",
    "pino": "^8.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3",
    "yarn": "^1.22.19"
  }
}
